<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <!--
         Base application theme for API 21+. This theme completely replaces
		AppBaseTheme from BOTH res/values/styles.xml, res/values-v11/styles.xml and res/values-v13/styles.xml
		on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
        <!-- API 21 theme customizations can go here. -->
        <item name="android:colorPrimary">#ff444abf</item>
        <item name="android:colorAccent">#ff444abf</item>
        <item name="android:colorControlNormal">#ff6d6d6d</item>
    </style>

    <style name="AppBaseThemeDark" parent="@android:style/Theme.Material.NoActionBar.Fullscreen">
        <!-- API 21 theme customizations can go here. -->
        <item name="android:colorPrimary">#ff444abf</item>
        <item name="android:colorAccent">#ff9ea6ff</item>
        <item name="android:colorControlNormal">#ffc7c7c7</item>
    </style>

    <style name="MenuDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
